<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_background"
    android:orientation="vertical"
    android:padding="16dp"
    >


    <TextView
        android:id="@+id/title_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elegir Problema"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/lyProblemas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="276dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:theme="@style/ForceLightSpinner" />

        <ImageView
            android:id="@+id/imageViewProblemas"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tint="@null"
            app:srcCompat="@drawable/checked" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/add_new" />

    </LinearLayout>


    <ListView
        android:id="@+id/lstTextProblemas"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scrollbars="vertical" />

    <LinearLayout
        android:id="@+id/lyCamera"
        android:layout_width="385dp"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="233dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="Agregar Fotos 0/2"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_camera"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_camera" />

        <ImageView
            android:id="@+id/imageViewCamera"
            android:layout_width="74dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tint="@null"
            app:srcCompat="@drawable/checked" />

    </LinearLayout>

    <EditText
        android:id="@+id/editText_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comentario"
        android:inputType="text"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/lySpeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Button"
            android:textColor="#FFFFFF"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/txtSpeed"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="TesteoVelocidad" />

        <ImageView
            android:id="@+id/imageViewTest"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tint="@null"
            app:srcCompat="@drawable/checked" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <!-- Botón Cancelar -->
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            app:backgroundTint="@null"/>

        <!-- Botón Aceptar -->
        <Button
            android:id="@+id/btn_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:text="Aceptar"
            app:backgroundTint="@null"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sCompletado"
            android:layout_width="170dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/switch_track_color" />
    </LinearLayout>
</LinearLayout>